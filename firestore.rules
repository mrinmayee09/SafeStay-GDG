
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow anyone to submit a report
    // In a real app, you would want to lock this down further
    // For example, only allowing authenticated users to write.
    match /reports/{reportId} {
      allow create: if true;
      allow read, write, delete: if false; // Disallow modification/deletion
    }

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
